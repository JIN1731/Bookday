<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Book">
	
	<select id="selectList" resultType="kh.bookday.dto.BookDTO">
		select b_img_url from book
	</select>
	
	<select id="selectBookByIsbn" resultType="kh.bookday.dto.BookDTO">
		select * from book where b_isbn=#{value}
	</select>
	
	<select id="selectReviewByIsbn" resultType="kh.bookday.dto.ReviewDTO">
		select * from where b_isbn=#{value}
	</select>
	
	<insert id="insertReview">
		insert into review values(review_seq.nextval,#{rv_writer_id},#{rv_writer_nn},#{rv_write_date},#{rv_content},#{b_isbn})
	</insert>
	
	<delete id="deleteReview">
		delete from review where b_isbn=#{b_isbn} and rv_writer_id=#{rv_writer_id}
	</delete>
	
	<update id="updateReview">
		update review set rv_content=#{rv_content} where rv_writer_id =#{rv_writer_id } and b_isbn=#{b_isbn} and rv_seq=#{rv_seq}
	</update>
	
	<insert id="insertLikeCount">
		insert into values(review_like_seq.nextval, #{rv_seq}, #{id}, #{b_isbn}, #{rvl_check})
	</insert>
	
	<select id="selectPostByIsbn">
		select * from post where b_isbn=#{value}
	</select>
	
</mapper>

