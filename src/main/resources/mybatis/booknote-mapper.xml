<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Booknote">

	<select id="selectPostListById" resultType="kh.bookday.dto.PostDTO">
		select * from post where p_writer_id = #{id}
	</select>
	
	<insert id="insertPost">
		insert into post values(post_seq.nextval, #{p_writer_id}, #{b_isbn}, #{b_img_url}, #{b_title}, #{b_writer}, #{b_genre}, #{p_writer_nn}, sysdate, #{p_title}, #{p_content}, 0, 0, 0)
	</insert>


</mapper>